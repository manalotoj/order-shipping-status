  // Show test status in the gutter; auto-refresh on changes
  "testing.automaticallyOpenPeekView": "failureAnywhere",
  // Make pytest output a bit chattier in VS Codeâ€™s Test UI
  "python.testing.pytestPath": "${workspaceFolder}/.venv/bin/pytest"
}